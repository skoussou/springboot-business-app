<settings>
  <localRepository>./local-m2-repository</localRepository>
 
  <profiles>
    <profile>
      <id>local-m2-repository</id>
      <repositories>
        <repository>
          <id>local-m2-repository</id>
          <url>file://local-m2-repository</url> 			  
          <releases>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>local-m2-repository-plugins</id>
          <url>file://local-m2-repository</url>			  
          <releases>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>

    </profiles>
  <activeProfiles>
    <!-- Optionally, make the repository active by default-->
    <activeProfile>local-m2-repository</activeProfile>
  </activeProfiles>


</settings>

